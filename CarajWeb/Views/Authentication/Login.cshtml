@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}


<header class="flex-box text-center box header-login">
    <div class="container-home" style="margin:auto">
        <a href="@Url.Action("Index", "Home")">
            <i class="fas fa-home"></i> Back to Home
        </a>
        <h3>Login</h3>
        <form method="post" action="/Authentication/GetUserLogin">
            <div class="login-home">
                <div class="login-input">
                    <label class="login-label" for="location">Username:</label>
                    <input name="username" class="location login-input-fix" id="username" type="text" required />
                </div>

                <div class="login-input">
                    <label class="login-label" for="location">Password:</label>
                    <input name="password" class="location login-input-fix" id="password" type="password" required />
                </div>
                <p class="p-error">@TempData["Error"]</p>
                <div class="login-input align-bottom">
                    <button class="search-button" type="submit"><i class="fas fa-lock"></i> Login</button>
                </div>
                <span>@Html.ActionLink("Login as Company", "CompanyLogin", "Authentication")</span>
            </div>
        </form>
    </div>
</header>