@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="flex-box text-center box header-login">
    <div class="container-home" style="margin:auto">
        <a href="@Url.Action("Index", "Home")">
            <i class="fas fa-home"></i> Back to Home
        </a>
        <h3>Register</h3>
        <form method="post" action="/Authentication/RegisterUser">
            <div class="login-home">
                <div class="login-input">
                    <label class="login-label" for="username">Username:</label>
                    <input name="CustomerUserName" class="location login-input-fix" type="text" />
                </div>
                <div class="login-input">
                    <label class="login-label" for="name">Name:</label>
                    <input name="CustomerName" class="location login-input-fix" type="text" />
                </div>
                <div class="login-input">
                    <label class="login-label" for="lastName">Last Name:</label>
                    <input name="CustomerSurname" class="location login-input-fix" type="text" />
                </div>
                <div class="login-input">
                    <label class="login-label" for="birthDate">Birhdate:</label>
                    <input name="CustomerBirthDate" class="location login-input-fix" type="date" min='1899-01-01' max='2000-12-12' />
                </div>
                <div class="login-input">
                    <label class="login-label" for="password">Password:</label>
                    <input name="CustomerPassword" class="location login-input-fix" type="password" />
                </div>
                <div class="login-input align-bottom">
                    <button class="search-button" type="submit"><i class="fas fa-lock"></i>&nbsp;&nbsp;&nbsp;Register</button>
                </div>
                <span>@Html.ActionLink("Register as Company", "CompanyRegister", "Authentication")</span>
            </div>
        </form>
    </div>
</header>