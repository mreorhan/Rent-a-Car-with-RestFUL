@model CarajWeb.Models.CarBring

@{
    ViewBag.Title = "Car Bring";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="flex-box text-center box carDetail-landing">
    @{ Html.RenderPartial("_UserControl"); }
</header>
<section class="default-bg margin-medium box">
    <h2>Create</h2>
    <section class="flex-box-paddingS">
        <div class="profile__detail-details text-center flex-box-full">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.carID,Request.QueryString["car"])
                        

                    <div class="form-group">
                        @Html.LabelFor(model => model.endKm, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.endKm, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.endKm, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Bring Car" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "List")
            </div>
        </div>
    </section>

</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
